{{#if this.isHomepage}}
<section class="resources snipcss-aQjeH">
  <style>
    /* General Styles */
    .d-header {
      background-color: #B3BA9D !important;
    }

    body {
      font-family: Arial, sans-serif;
    }

    /* Welcome Section */
    .welcome-container {
      background-color: #4E5935;
      color: #fff;
      text-align: center;
      padding: 20px;
      border-radius: 10px;
      max-width: 1012px;
      margin: 20px auto;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .welcome-container h1 {
      font-family: 'Playfair Display', serif;
      font-size: 2rem;
      margin: 0;
    }

    .welcome-container p {
      font-family: 'Montserrat', sans-serif;
      font-size: 16px;
      margin: 10px 0;
    }

    /* Premium Section */
    .premium-container {
      display: flex;
      flex-direction: column; /* Changed for better responsiveness */
      justify-content: center;
      align-items: center;
      background-color: #ffffff !important;
      border: 2px solid #c4a769;
      border-radius: 50px;
      padding: 20px;
      max-width: 745px;
      margin: 20px auto;
    }

    .premium-text {
      color: #675f50;
      text-align: center;
      margin-bottom: 15px;
    }

    .premium-text h2 {
      font-size: 1.5rem;
      margin: 0 0 10px;
      color: #8b7642;
    }

    .premium-text ul {
      margin: 0;
      padding: 0;
      list-style-type: disc;
      text-align: left;
    }

    .premium-text ul li {
      font-size: 0.9rem;
      line-height: 1.5;
    }

    .premium-button {
      background-color: #b4a16f;
      color: white;
      padding: 15px 40px;
      border: none;
      border-radius: 50px;
      font-size: 1rem;
      cursor: pointer;
      text-align: center;
      transition: background-color 0.3s;
    }

    .premium-button:hover {
      background-color: #a08f5d;
    }

    /* Video Section */
    .video-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 20px;
      padding: 20px;
      max-width: 100%;
      box-sizing: border-box;
    }

    /* Main Video */
    .main-video video {
      width: 100%;
      max-width: 800px;
      border: 2px solid #ccc;
      border-radius: 10px;
    }

    /* Thumbnails */
    .video-thumbnails {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 15px;
      width: 100%;
    }

    .thumbnail video {
      width: 100%;
      max-width: 150px;
      border: 2px solid #ccc;
      border-radius: 10px;
      transition: border-color 0.3s;
    }

    .thumbnail video:hover {
      border-color: #b09d5e;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .premium-container {
        flex-direction: column;
        padding: 20px;
      }

      .main-video video {
        max-width: 100%;
      }

      .thumbnail video {
        max-width: 120px;
      }
    }

    @media (max-width: 480px) {
      .main-video video {
        max-width: 100%;
      }

      .thumbnail video {
        max-width: 100px;
      }
    }
  </style>

  <!-- Welcome Section -->
  <div class="welcome-container">
    <h1>Welcome to RISE Impact Investing Community!</h1>
    <p>We are a network of women who are ready to make an impact through investing.</p>
    <p>Here, you’ll find a supportive community and the resources you need to align your investments with your values.<br>
      Whether you’re just starting or looking to expand your impact, we’re here to guide you every step of the way.
    </p>
  </div>

  <!-- Premium Section -->
  <div class="premium-container">
    <div class="premium-text">
      <h2>Unlock Premium and Exclusive Benefits</h2>
      <ul>
        <li>Exclusive Access to the Impact Investing Masterclass</li>
        <li>Exclusive and Tailored High-Impact Deals</li>
        <li>Exclusive Masterclasses, Articles, and News</li>
        <li>Exclusive Events and In-Person Investors' Dinners and more!</li>
      </ul>
    </div>
    <div>
      <a href="https://impactinvestingcommunity.com/s" target="_blank">
        <button class="premium-button">Upgrade to Premium</button>
      </a>
    </div>
  </div>

  <!-- Video Section -->
  <div class="video-container">
    <!-- Main Video -->
    <div class="main-video">
      <video controls>
        <source src="placeholder.mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    </div>

    <!-- Smaller Video Thumbnails -->
    <div class="video-thumbnails">
      <div class="thumbnail">
