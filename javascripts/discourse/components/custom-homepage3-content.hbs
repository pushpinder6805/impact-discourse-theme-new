    const cardsContainer = document.getElementById('cardsContainer');

    function renderCards(cards) {
        cardsContainer.innerHTML = '';
        cards.forEach(card => {
            const cardElement = document.createElement('a');
            cardElement.classList.add('card796');
            cardElement.href = card.link;
            cardElement.target = "_blank";
            cardElement.innerHTML = `
                <img src="${card.imageUrl}" alt="${card.title} Logo">
                <div class="tags796">
                    ${Array.isArray(card.impactArea) ? card.impactArea.map(area => `<span>${area}</span>`).join('') : `<span>${card.impactArea}</span>`}
                </div>
                <h2>${card.title}</h2>
                <p>${card.description}</p>
                <div class="card-footer796">
                    <div class="likes">
                        <i>👁️</i>${card.views}
                    </div>
                    <div class="comments">
                        <i>💬</i>${card.comments}
                    </div>
                </div>
            `;
            cardsContainer.appendChild(cardElement);
        });
    }

    function filterCards() {
        const categoryValue = document.getElementById('categoryFilter').value;
        const impactAreaValue = document.getElementById('impactAreaFilter').value;
        const investmentSizeValue = document.getElementById('investmentSizeFilter').value;

        const filteredCards = cardData.filter(card => {
            const categoryMatch = categoryValue === 'all' || card.investmentTypes.includes(categoryValue);
            const impactAreaMatch = impactAreaValue === 'all' || (
                Array.isArray(card.impactArea)
                    ? card.impactArea.includes(impactAreaValue)
                    : card.impactArea === impactAreaValue
            );
            let investmentSizeMatch = true;
            if (investmentSizeValue !== 'all') {
                const sizeValue = parseInt(investmentSizeValue);
                investmentSizeMatch = (sizeValue === 5000 && card.investmentSize < 5000) ||
                                      (sizeValue === 25000 && card.investmentSize >= 5000 && card.investmentSize <= 25000) ||
                                      (sizeValue === 50000 && card.investmentSize > 25000 && card.investmentSize <= 50000) ||
                                      (sizeValue === 100000 && card.investmentSize > 50000);
            }
            return categoryMatch && impactAreaMatch && investmentSizeMatch;
        });

        renderCards(filteredCards);
    }

    document.getElementById('categoryFilter').addEventListener('change', filterCards);
    document.getElementById('impactAreaFilter').addEventListener('change', filterCards);
    document.getElementById('investmentSizeFilter').addEventListener('change', filterCards);

    // Initial render
    renderCards(cardData);
</script>
